{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "noErrorTruncation": true,
    "strict": true,
    "noImplicitAny": false, // >:(

    "paths": {
      "@packages/*": [
        "./packages/*",
      ]
    }
  },

  "exclude": ["node_modules/*"]
}
